<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context=".MainActivity">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textFreeFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textPlayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Spieler: X" />

    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/field11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip" />

            <Button
                android:id="@+id/field12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/field13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/field21"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/field22"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/field23"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/field31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/field32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/field33"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:onClick="handleClick"
                android:textColor="@color/black"
                android:textSize="48dip"
                app:strokeColor="@color/red"
                app:strokeWidth="3dp" />

        </TableRow>

    </TableLayout>
</LinearLayout>